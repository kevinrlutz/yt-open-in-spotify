{
  "manifest_version": 3,
  "name": "Open in Spotify for YouTube",
  "version": "1.1.2",
  "description": "Adds an 'Open in Spotify' button under YouTube music videos. Parses the title and opens the Spotify page for the song.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "homepage_url": "https://github.com/kevinrlutz/yt-open-in-spotify",
  "author": "Kevin Lutz",

  "permissions": ["storage", "tabs", "activeTab", "identity"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://open.spotify.com/*",
    "https://api.spotify.com/*",
    "https://accounts.spotify.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_start",
      "exclude_matches": [
        "*://www.youtube.com/embed/*",
        "*://www.youtube.com/live_chat*"
      ],
      "all_frames": false
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "open-spotify@kevinlutz.me", 
      "strict_min_version": "115.0"
    }
  }
}